<div class="contianer">
  <div class="detail-card">
      <div class="img">
      <%= image_tag @product.image.to_s %>
    </div>
    <div class="inner-text">
      <div class="text">
        <h3><%= @product.name %></h4></h3>
        <p><%= @product.description %></p>
        <p class="value">¥<%= @product.price %></p>
      </div>
      <div class="btn">
            <%# 商品詳細ページから、カートに追加するリンクを作成 %>
            <%= button_to "買い物カゴに入れる", product_cart_products_path(@product), method: :post %>
            <% if current_user.admin %>
          <button><%= link_to "編集", edit_product_path %></button>
          <% end %>
      </div>
    </div>
  </div>
</div>